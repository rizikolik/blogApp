<div class="ui main text segment container">
    <div class="ui huge header">Edit Blog</div>
   
    <form class="ui form" action="/blogs"  method="POST" >
        <div class="field">
            <label>Title</label>
             <input type="text"        name="blog[title]" placeholder="title">
        </div>
        <div class="field">
           <label>Image</label>
           <input type="text"          name="blog[image]" placeholder="image">
        </div>
        <div class="field">
           <label>Comments</label> 
           <textarea rows=10 cols="50" name="blog[body]" placeholder="content"></textarea>
        </div>
        <input  class="ui primary big button" type="submit">
     </form>
    
</div>








